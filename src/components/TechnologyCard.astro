---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro';

export interface Props {
  technology: string
  image: ImageMetadata
}

const {technology, image} = Astro.props;
---

<div class="space-y-2">
  <div>
    <div class="w-26 cursor-pointer h-26 rounded-[18px] p-[7px] bg-[#EDEFF3] border-1 border-border-secundary/32">
        <div class="flex items-center justify-center bg-bg-secondary rounded-xl w-full h-full" style="box-shadow: inset 0px 2px 1.5px rgba(152, 158, 179, 0.32), inset 0px 0px 0px 2px rgba(152, 158, 179, 0.24);">
            <Image src={image} alt={technology} style="filter: drop-shadow(0px 3px 1px rgba(0, 0, 0, 0.01)) drop-shadow(0px 1px 1px rgba(0, 0, 0, 0.05)) drop-shadow(0px 1px 1px rgba(0, 0, 0, 0.09));">
        </div>
    </div>
  </div>
  <div class="text-center">
    <span class="text-secondary">{technology}</span>
  </div>
</div>