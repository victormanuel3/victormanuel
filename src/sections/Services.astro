    </div>
</section>

<script>
    function handleButtonClick(button: HTMLButtonElement): void {
        const isCurrentlySelected = button.dataset.selected === 'true';
        const styleClass = button.dataset.style as string;
        const phraseElement = document.getElementById('phrase') as HTMLElement;
        
        if (!phraseElement || !styleClass) return;
        
        if (isCurrentlySelected) {
            button.dataset.selected = 'false';
            phraseElement.classList.remove(styleClass);
        } else {
            button.dataset.selected = 'true';
            phraseElement.classList.add(styleClass);
        }
    }
    
    (window as any).handleButtonClick = handleButtonClick;
</script>